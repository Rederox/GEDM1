{{ form_start(productForm) }}
    <div class="form-group product-form">
        <div class="d-block">
        <div class="text-darkBlue">
        {{ form_label(productForm.product_name, 'Nom produit') }}
         </div>
        {{ form_widget(productForm.product_name, {
            attr: {
                'class':'form-control'}
            }) }}
        </div>
    </div>
    <div class="form-group product-form">
     <div class="d-block"> 
        <div class="text-darkBlue">
            {{ form_label(productForm.description) }}
        </div>
            {{ form_widget(productForm.description, {
            attr: {
                'class':'form-control'}
            }) }}
        </div>
        </div>
         <div class="form-group product-form">
     <div class="d-block"> 
        <div class="text-darkBlue">
            {{ form_label(productForm.file, 'Fiche de données de sécurités') }}
        </div>
            {{ form_widget(productForm.file, {
            attr: {
                'class':'form-control'}
            }) }}
        </div>
        </div>
     <button type="submit" class="btn btn-primary">{{ button_label|default('Ajouter') }}</button>
{{ form_end(productForm) }}